                                    <TextBlock x:Name="txtGrade17" Text="-" TextAlignment="Center" FontSize="28" Foreground="DarkCyan"/>
                                    <TextBlock x:Name="txth17" Text="90" TextAlignment="Center" FontSize="18" Background="LightPink"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="1"  VerticalAlignment="Center">
                                    <TextBlock x:Name="txtNo18" Text="XXXXXXXXXX" TextAlignment="Center" FontSize="18" />
                                    <TextBlock x:Name="txtGrade18" Text="H+" TextAlignment="Center" FontSize="28" Foreground="DarkCyan"/>
                                    <TextBlock x:Name="txth18" Text="120" TextAlignment="Center" FontSize="18"/>
                                </StackPanel>
                                <StackPanel Grid.Row="3" Grid.Column="1"  VerticalAlignment="Center">
                                    <TextBlock x:Name="txtNo19" Text="XXXXXXXXXX" TextAlignment="Center" FontSize="18" />
                                    <TextBlock x:Name="txtGrade19" Text="I-" TextAlignment="Center" FontSize="28" Foreground="DarkCyan"/>
                                    <TextBlock x:Name="txth19" Text="120" TextAlignment="Center" FontSize="18"/>
                                </StackPanel>
                                <StackPanel Grid.Row="4" Grid.Column="1"  VerticalAlignment="Center">
                                    <TextBlock x:Name="txtNo20" Text="XXXXXXXXXX" TextAlignment="Center" FontSize="18" />
                                    <TextBlock x:Name="txtGrade20" Text="-" TextAlignment="Center" FontSize="28" Foreground="DarkCyan"/>
                                    <TextBlock x:Name="txth20" Text="130" TextAlignment="Center" FontSize="18" Background="LightSkyBlue" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock FontSize="12" TextAlignment="Center" Margin="5">
                                [F5] : スキップ [F6] : 取り消し [F7] : ロット削除 [F11] : 履歴一覧  [F12] : 測定一覧
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
