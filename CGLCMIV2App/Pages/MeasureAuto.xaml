                            <StackPanel Grid.Row="3" Grid.Column="0"  VerticalAlignment="Center">
                                <TextBlock x:Name="txtNo4" Text="XXXXXXXX21" TextAlignment="Center" FontSize="18" />
                                <TextBlock x:Name="txtGrade4" Text="K↓" TextAlignment="Center" FontSize="28" Foreground="DarkCyan"/>
                                <TextBlock x:Name="txth4" Text="120" TextAlignment="Center" FontSize="18"/>
