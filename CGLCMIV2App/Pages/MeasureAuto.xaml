                                <RowDefinition Height="120"/>
                                <RowDefinition Height="120"/>
                                <RowDefinition Height="120"/>
                                <RowDefinition Height="120"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock x:Name="txtNo1" Text="XXXXXXXX10" TextAlignment="Center" FontSize="18" />
                                <TextBlock x:Name="txtGrade1" Text="D" TextAlignment="Center" FontSize="28" Foreground="DarkCyan"/>
                                <TextBlock x:Name="txth1" Text="120" TextAlignment="Center" FontSize="18"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0"  VerticalAlignment="Center">
                                <TextBlock x:Name="txtNo2" Text="XXXXXXXX53" TextAlignment="Center" FontSize="18" />
