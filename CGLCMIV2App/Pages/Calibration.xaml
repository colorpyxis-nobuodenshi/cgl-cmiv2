                <StackPanel Margin="5,20,0,0">
                    <TextBlock Style="{StaticResource Header24}">LED照明</TextBlock>
                    <Separator/>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="16"  TextWrapping="Wrap">LED照明のキャリブレーションをします。LEDの光量を測定して最適な白色光量、UV光量になるように調整します。調整した場合は白色点を再度取得してください。</TextBlock>
                            <StackPanel Margin="30 15">
                                <TextBlock Margin="5" TextWrapping="Wrap">前回実行日時： <TextBlock x:Name="CalibrateDateLED" Text="2018/2/10 10:00"></TextBlock></TextBlock>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="100">白色明るさ</TextBlock>
                                    <TextBox x:Name="txtLEDD65" Text="0" Width="100" TextAlignment="Right"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock  Width="100">UV明るさ</TextBlock>
                                    <TextBox x:Name="txtLEDUV" Text="0" Width="100" TextAlignment="Right"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" >
                            <Button Width="100" Height="50" Margin="1" x:Name="btnLEDSet">セット</Button>
                            <Button Width="100" Height="50" Margin="1" x:Name="btnLEDDefault">初期値</Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Margin="5,20,0,0">
                <TextBlock Style="{StaticResource Header24}">白色点</TextBlock>
                <Separator/>
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock FontSize="16"  TextWrapping="Wrap">白色点を測定します。CIE L*a*b*、L*C*h*計算時の基本データとなるので照明が変わったらキャリブレーションをすることをお勧めします。</TextBlock>
                            <StackPanel Margin="30 15">
                                <TextBlock Margin="5" TextWrapping="Wrap">前回実行日時： <TextBlock x:Name="CalibrateDateWhitepoint" Text="2018/2/10 10:00"></TextBlock></TextBlock>
                                <TextBlock Margin="5" TextWrapping="Wrap">CIE XYZ： <TextBlock x:Name="CalibrateWhitepoint" Text="450 , 450 , 450          (450 , 450 , 450)"></TextBlock></TextBlock>
                                <TextBlock Margin="5" TextWrapping="Wrap">CIE Yxy： <TextBlock x:Name="CalibrateWhitepointYxy" Text="450 , 0.000 , 0.000          (450 , 0.000 , 0.000)"></TextBlock></TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Button  Width="100"  Height="50" Cursor="Hand" x:Name="btnGetWhitepoint">白色点取得</Button>
                        </StackPanel>
                    </Grid>

            </StackPanel>
                <StackPanel Margin="5,20,0,0">
                    <TextBlock Style="{StaticResource Header24}">感度むら</TextBlock>
                    <Separator/>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="16"  TextWrapping="Wrap">カメラのレンズ、センサーの感度むらを補正するデータを作成します。</TextBlock>
                            <StackPanel Margin="30 15">
                                <TextBlock Margin="5" TextWrapping="Wrap">前回実行日時： <TextBlock x:Name="CalibrateDateShading" Text="2018/2/10 10:00"></TextBlock></TextBlock>
                                
                            </StackPanel>
                        </StackPanel>
                        <Button Grid.Column="1" Width="100"  Height="50"  x:Name="btnMakeShadingCorrectPixels" Cursor="Hand">実行</Button>
                    </Grid>

                </StackPanel>

                <StackPanel Margin="5,20,0,0">
                    <TextBlock Style="{StaticResource Header24}">測定視野の調整</TextBlock>
                    <Separator/>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">

                            <TextBlock FontSize="16" TextWrapping="Wrap">ダイヤモンドが中心にくるように調整してください。</TextBlock>
                            <ScrollViewer Width="512" Height="348" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" x:Name="svwCameraPixels">
                                <Image Width="512" Height="348" x:Name="imgCameraPixels"  Stretch="Fill"></Image>
                            </ScrollViewer>
                        </StackPanel>
                        <StackPanel Grid.Column="1" >
                            <Button Width="100"  Height="50" Content="開始" x:Name="btnCameraLiveStart"/>
                            <Button Width="100"  Height="50" Content="停止" x:Name="btnCameraLiveStop" IsEnabled="False"/>
                            <Button Width="100"  Height="50" Content="取込" x:Name="btnCameraSnap"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <StackPanel Margin="5,20,0,0">
                    <TextBlock Style="{StaticResource Header24}">位置決めステージ</TextBlock>
                    <Separator/>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">

                            <TextBlock FontSize="16" TextWrapping="Wrap">位置決めステージの機械原点復帰および原点復帰をします</TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" >
                            <Button Width="100"  Height="50" x:Name="btnAutoStageOrg">機械原点復帰</Button>
                            <Button Width="100"  Height="50" x:Name="btnAutoStageHome">原点復帰</Button>
                        </StackPanel>


                    </Grid>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="16" TextWrapping="Wrap">位置決めステージの上下移動をします</TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" >
                            <Button Width="100"  Height="50" x:Name="btnAutoStageMeasurepoint">測定位置</Button>
                            <Button Width="100"  Height="50" x:Name="btnAutoStageWorksetpoint">ワーク位置</Button>
                        </StackPanel>
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="16" TextWrapping="Wrap">ステージの回転の確認をします</TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" >
                            <Button Width="100"  Height="50" x:Name="btnAutoStageRotateCW45">+45</Button>
                            <Button Width="100"  Height="50" x:Name="btnAutoStageRotateCCW45">-45</Button>
                            <Button Width="100"  Height="50" x:Name="btnAutoStageRotateHome" Cursor="Hand">原点</Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
